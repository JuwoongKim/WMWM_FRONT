<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <TextView
                    android:id="@+id/with"
                    style="@style/TitleBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/arrow"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="5dp"
                    android:text="With"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/title_subName"
                    style="@style/TitleBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/with"
                    android:text="Jenny"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ScrollView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/outline_history">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_history"
                            style="@style/TitleBadgeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="5dp"
                            android:text="History"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalText"
                            style="@style/TitleBadgeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="19dp"
                            android:layout_toRightOf="@+id/text_history"
                            android:textColor="@color/black_overlay"
                            android:textSize="12sp" />

                        <ListView
                            android:id="@+id/historyListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/text_history"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:divider="@color/contentDividerLine"
                            android:dividerHeight="1dp"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:scrollbars="vertical"
                            tools:context=".HistoryFragment" />


                    </RelativeLayout>


                </ScrollView>

                <ImageView
                    android:id="@+id/content_from_to_dots_divider"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/card_view"
                    android:src="@color/trans0" />

                <LinearLayout
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/content_from_to_dots_divider"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/outline_history"
                    android:orientation="horizontal">

                    <fragment
                        android:id="@+id/hmap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.google.android.gms.maps.SupportMapFragment"/>


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>