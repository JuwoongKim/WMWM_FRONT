<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildTwo"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TextView
            android:id="@+id/rank_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="기간별 만남 순위"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rank_title"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="*현재 시간 기준"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black_overlay"/>


    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/child_two_tabs"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/black_overlay"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black_overlay"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/child_two_container"
        android:layout_below="@id/child_two_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>






</FrameLayout>